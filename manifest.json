{
    "manifest_version":2,
    "name": "Study Budy",
    "version": "1.0",
    "content_scripts":[
       { 
        "matches":[
            "<all_urls>"
        ],   
        "js":["popup.js"]
    }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "description": "A SB button for your tool bar.",
    "icons":{"128":"images/icon_128.png"},
    "browser_action": {
        "default_icon": "images/pencilIcon.png",
        "default_title":"Study Budy", 
        "default_popup": "popup.html"
    },
    "permissions":["activeTab"]

}
