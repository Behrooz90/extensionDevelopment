{
    "manifest_version":2,
    "name": "Study Budy",
    "version": "2.1.0",
    "content_scripts":[
       { 
        "matches":[
            "http://*/*", "https://*/*"
        ],   
        "js":["popup.js"]
    }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "description": "A SB button for your tool bar.",
    "icons":{"128":"images/sbIcon_128.png"},
    "browser_action": {
        "default_icon": "images/sbIcon.png",
        "default_title":"Study Budy", 
        "default_popup": "popup.html"
    }, 
    // "web_accessible_resources": [
    //     {
    //         "resources": [ "images/*.*" ],
    //         "matches": [ "<all_urls>" ]
    //       }
    //   ],
    "permissions":[
       "activeTab",
        "tabs",
        "notifications",
        "storage"
    ]
   
}
